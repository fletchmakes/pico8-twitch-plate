function _init()
	x = 0
end

function _update()
	if(btnp(⬅️)) then
		x -= 16
		if (x == -16) then
			x = 112
		end
	end
	
	if(btnp(➡️)) then
		x += 16
		if (x == 128) then
			x = 0
		end
	end
end

function _draw()
	cls(0)
	rectfill(x, 56, x+16, 72, 8)
end
